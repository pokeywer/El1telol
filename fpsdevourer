-- EL1TE'S DEVOURER - Neon Blue Animated Panel (Mobile Friendly)

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Remove accessories at spawn
local function removeAllAccessoriesFromCharacter()
    local character = player.Character
    if not character then return end
    for _, item in ipairs(character:GetChildren()) do
        if item:IsA("Accessory") or item:IsA("LayeredClothing") 
        or item:IsA("Shirt") or item:IsA("ShirtGraphic") 
        or item:IsA("Pants") or item:IsA("BodyColors") 
        or item:IsA("CharacterMesh") then
            pcall(function() item:Destroy() end)
        end
    end
end
player.CharacterAdded:Connect(function() task.wait(0.2) removeAllAccessoriesFromCharacter() end)
if player.Character then task.defer(removeAllAccessoriesFromCharacter) end

-- Bat loop
local Devour = {}
Devour.running = false
local TOOL_NAME = "Bat"
local function equipBat()
    local char, bp = player.Character, player:FindFirstChild("Backpack")
    if char and bp then
        local tool = bp:FindFirstChild(TOOL_NAME)
        if tool then tool.Parent = char return true end
    end
end
local function unequipBat()
    local char, bp = player.Character, player:FindFirstChild("Backpack")
    if char and bp then
        local tool = char:FindFirstChild(TOOL_NAME)
        if tool then tool.Parent = bp return true end
    end
end
function Devour:Start()
    if self.running then return end
    self.running = true
    task.spawn(function()
        while self.running do
            equipBat()
            task.wait(0.041)
            unequipBat()
            task.wait(0.041)
        end
    end)
end
function Devour:Stop()
    self.running = false
    unequipBat()
end
player.CharacterAdded:Connect(function() Devour:Stop() end)

-- Remove old GUI
local old = playerGui:FindFirstChild("El1tesDevourerPanel")
if old then old:Destroy() end

-- GUI
local gui = Instance.new("ScreenGui")
gui.Name = "El1tesDevourerPanel"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = playerGui

local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0, 180, 0, 90)
main.Position = UDim2.new(0.5, -90, 0.7, -45)
main.BackgroundColor3 = Color3.fromRGB(10, 10, 30)
main.BorderSizePixel = 0
main.Active = true
Instance.new("UICorner", main).CornerRadius = UDim.new(0, 14)

-- Neon blue animated gradient
local grad = Instance.new("UIGradient", main)
grad.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 120, 255)),
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0, 60, 255)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 150, 255))
}
grad.Rotation = 0

-- Animate gradient rotation
task.spawn(function()
    local rot = 0
    while task.wait(0.03) do
        rot += 1
        if rot >= 360 then rot = 0 end
        grad.Rotation = rot
    end
end)

-- Stroke glow
local stroke = Instance.new("UIStroke", main)
stroke.Thickness = 2
stroke.Color = Color3.fromRGB(0, 170, 255)
stroke.Transparency = 0.1

-- Title
local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1,0,0,28)
title.Text = "El1te's Devourer"
title.Font = Enum.Font.GothamBlack
title.TextSize = 17
title.TextColor3 = Color3.fromRGB(0,200,255)
title.BackgroundTransparency = 1
title.TextStrokeTransparency = 0.6
title.TextStrokeColor3 = Color3.fromRGB(0,0,0)

-- Button
local btn = Instance.new("TextButton", main)
btn.Size = UDim2.new(0.9, 0, 0, 38)
btn.Position = UDim2.new(0.05, 0, 0, 45)
btn.BackgroundColor3 = Color3.fromRGB(10, 40, 80)
btn.Text = "Fpsdev OFF"
btn.Font = Enum.Font.GothamBold
btn.TextSize = 15
btn.TextColor3 = Color3.fromRGB(255, 255, 255)
btn.BorderSizePixel = 0
Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 10)

local circle = Instance.new("ImageLabel", btn)
circle.Size = UDim2.new(0,18,0,18)
circle.Position = UDim2.new(1,-26,0.5,-9)
circle.BackgroundTransparency = 1
circle.Image = "rbxassetid://10137946418"
circle.ImageColor3 = Color3.fromRGB(0,150,255)

-- Toggle
local state = false
local function update()
    if state then
        btn.Text = "Fpsdev ON"
        btn.BackgroundColor3 = Color3.fromRGB(0, 100, 255)
        circle.ImageColor3 = Color3.fromRGB(0,255,255)
    else
        btn.Text = "Fpsdev OFF"
        btn.BackgroundColor3 = Color3.fromRGB(10, 40, 80)
        circle.ImageColor3 = Color3.fromRGB(0,150,255)
    end
end
btn.MouseButton1Click:Connect(function()
    state = not state
    if state then Devour:Start() else Devour:Stop() end
    update()
end)
update()

-- Drag (mobile + PC)
do
    local dragging, dragInput, dragStart, startPos
    main.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = main.Position
            input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragging=false end end)
        end
    end)
    main.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input == dragInput then
            local delta = input.Position - dragStart
            main.Position = UDim2.new(
                startPos.X.Scale, startPos.X.Offset + delta.X,
                startPos.Y.Scale, startPos.Y.Offset + delta.Y
            )
        end
    end)
end
